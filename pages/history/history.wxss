/**
 * 历史记录页面样式
 */

/* 引入WeUI样式 */
@import "/style/weui.wxss";

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  box-sizing: border-box;
  min-height: 100vh;
  background-color: #f8f8f8;
}

/* 标题区域样式 */
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
  width: 100%;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #07c160;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #888;
}

/* 历史记录列表样式 */
.history-list {
  width: 100%;
  flex: 1;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.history-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.history-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.history-name {
  font-size: 32rpx;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.history-time {
  font-size: 24rpx;
  color: #999;
  display: block;
}

.empty-history {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  color: #999;
  font-size: 30rpx;
}

/* 操作按钮区域样式 */
.action-area {
  width: 100%;
  padding: 0 40rpx;
  margin-top: 40rpx;
}

.clear-btn {
  margin-bottom: 0;
}